# Backend Environment Variables for Production Deployment

# Core MentraOS Configuration
PACKAGE_NAME=cloud.augmentos.recorder
MENTRAOS_API_KEY=your_production_api_key_here
PORT=8069
NODE_ENV=production

# CORS Configuration for separate frontend/backend deployment
FRONTEND_URLS=https://your-recorder-app.vercel.app,https://your-recorder-staging.vercel.app
ALLOWED_ORIGINS=https://your-recorder-app.vercel.app,https://your-recorder-staging.vercel.app

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/recorder?retryWrites=true&w=majority

# Storage Configuration
USE_LOCAL_DISK=false

# Cloudflare R2 Configuration (or AWS S3)
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=recorder
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-account.r2.cloudflarestorage.com/recorder

# Email Configuration
RESEND_API_KEY=your_resend_api_key

# Optional: Add staging/dev URLs for development
# ALLOWED_ORIGINS=https://your-recorder-app.vercel.app,http://localhost:5173